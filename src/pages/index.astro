---
import Layout from "../layouts/main.astro";
import Hero from "../components/Hero";
import AboutSection from "../components/AboutSection";
import ServicesSection from "../components/ServicesSection";
import GallerySection from "../components/GallerySection";
import TestimonialsSection from "../components/TestimonialsSection";
import LocationSection from "../components/LocationSection";

const content = {
	title: "Penjahit Grobogan & Seragam - Udin Busana Collection",
	description:
		"Jasa penjahit terbaik di Grobogan: Udin Busana Collection. Spesialis jahit seragam, kebaya, jas, dan batik dengan kualitas halus dan harga terjangkau. Lokasi di Pulokulon.",
	keywords:
		"penjahit grobogan, jasa jahit grobogan, penjahit terdekat, udin busana collection, penjahit kebaya grobogan, penjahit jas grobogan, tailor grobogan, jahit baju dinas",
};

const schema = JSON.stringify({
	"@context": "https://schema.org",
	"@type": "Tailor",
	name: "Udin Busana Collection",
	image: new URL("/logo.jpg", Astro.site),
	"@id": new URL(Astro.url.pathname, Astro.site),
	url: new URL(Astro.url.pathname, Astro.site),
	telephone: "+6285786489297",
	address: {
		"@type": "PostalAddress",
		streetAddress: "Jl. Danyang - Kuwu",
		addressLocality: "Pulokulon",
		addressRegion: "Grobogan",
		postalCode: "58181",
		addressCountry: "ID",
	},
	geo: {
		"@type": "GeoCoordinates",
		latitude: -7.1205287,
		longitude: 110.9963872,
	},
	openingHoursSpecification: {
		"@type": "OpeningHoursSpecification",
		dayOfWeek: [
			"Monday",
			"Tuesday",
			"Wednesday",
			"Thursday",
			"Friday",
			"Saturday",
			"Sunday",
		],
		opens: "07:00",
		closes: "17:00",
	},
	priceRange: "$$",
});
---

<Layout content={content}>
	<fragment slot="head">
		<script type="application/ld+json" set:html={schema} />
	</fragment>
	<Hero client:idle />
	<AboutSection client:visible />
	<ServicesSection client:visible />
	<GallerySection client:visible />
	<TestimonialsSection client:visible />
	<LocationSection client:visible />
</Layout>
